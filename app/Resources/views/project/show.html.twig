{% extends 'base.html.twig' %}

{% block body %}
    <h1>Project</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ project.nom }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if project.date %}{{ project.date|date('d/m/Y') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ project.localisation }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{% if project.heure %}{{ project.heure|date('H:i') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('event_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('event_edit', { 'id': project.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
