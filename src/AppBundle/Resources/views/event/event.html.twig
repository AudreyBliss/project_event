                        </ul>
                    </div>
                </div>
    		</div>
        </div>
    <p class="jcarousel-pagination" data-jcarouselpagination="true"></p>
</div>

<div id="main-container">
    <div id="main">
        <div id="content" class="normalcontent">
			<section class="event-items">
	        <h1>Les prochains</h1>
	        </section>
		</div>
	    <aside>
		<h1>AGENDA</h1>
        <div id="calendar-holder"></div>

        <h1 class="favorites_h1">Autour de moi</h1>

    <div class="aside-box colored-box bgBlue">
	<div id="all-map" class="aside-map map-box" data-position="self"></div>
		<div class="events-list">
		<table class="striped bgWhite aside-box-table">
					</table>
	</div>
</div>
			</aside>
    </div>
</div>
     <h1>Evenements</h1>

       <ul id="list">
        {% for e in event %}
            <li>{{e.nom}}</li>
            <li>{{e.date}}</li>
            <li>{{e.localisation}}</li>
            <li>{{e.heure}}</li>   
        {% endfor %}
        </ul>

        <div id="mapid"></div>

       <script>
            let mymap = L.map('mapid').setView([48.8534, 2.3488], 13); 
            display_map();
            {% for e in event %}
                display_marker({{e.latitude}}, {{e.longitude}})
            {% endfor %}
       </script> 

{%endblock%}