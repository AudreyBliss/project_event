<div id="banner"  class="jcarousel-wrapper ">
    <div id="banner-container" class="jcarousel jcarousel-skin-tst-banner">
        <div class="banner-box">
		    <div id="custom-map" class="main-map map-box" data-position="default"></div>
                <div class="banner-overlay map-overlay markerRenderable">
                    <div class="banner-overlay-box">
                        <h3>Événements</h3>
                        <ul class="banner-overlay-nav">
                            <li><a href="/app.php/fr/agenda"><i class="icon-pushpin"></i>À la une<span>0</span></a></li>
